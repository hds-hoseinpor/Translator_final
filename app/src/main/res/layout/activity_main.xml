<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_5"
    android:layoutDirection="rtl"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">

        <TextView
            style="@style/TextViewTitleBig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:gravity="center"
            android:text="خوش آمدید" />

        <TextView
            style="@style/TextViewTitleNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="انتخاب زبان :" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_from"
                style="@style/Sub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableRight="@drawable/ic_arrow_down"
                android:text="فارسی" />

            <ImageView
                android:id="@+id/img_change"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="10dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                app:srcCompat="@drawable/ic_convert"
                app:tint="@color/colorSecondary" />

            <TextView
                android:id="@+id/txt_to"
                style="@style/Sub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableRight="@drawable/ic_arrow_down"
                android:text="انگلیسی" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginVertical="10dp"
            android:background="@color/colorBorder" />

        <TextView
            style="@style/TextViewTitleNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="متن خود را وارد نمایید." />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/etxt_rounded_color_on_secondory_outline">

            <EditText
                android:id="@+id/etxt_text"
                style="@style/TextViewTitleNormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_toRightOf="@id/img_search"
                android:background="@null"
                android:hint="متن خود را وارد نمایید."
                android:imeOptions="actionSearch"
                android:inputType="text|textMultiLine"
                android:minHeight="60dp"
                android:paddingHorizontal="15dp" />

            <ImageView
                android:id="@+id/img_search"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                app:srcCompat="@drawable/ic_search_" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/etxt_rounded_color_on_secondory_outline_afew_radius"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_translate"
                    style="@style/TextViewTitleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_primary"
                    android:gravity="center"
                    android:justificationMode="inter_word"
                    android:paddingRight="30dp"
                    android:text="ترجمه" />

                <ProgressBar
                    android:id="@+id/pb1"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:indeterminateTint="@color/colorPrimaryVariant"
                    android:visibility="visible" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_result"
                style="@style/TextViewTitleNormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:justificationMode="inter_word"
                tools:text="متن خود را وارد نمایید." />

            <TextView
                android:id="@+id/txt_more"
                style="@style/TextViewTitleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:justificationMode="inter_word"
                android:text="اطلاعات بیشتر"
                android:textColor="@color/TextColorBlue" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />


    </LinearLayout>

    <com.darya.translator.Tools.BottomSheetSearch
        android:id="@+id/bss_language"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>